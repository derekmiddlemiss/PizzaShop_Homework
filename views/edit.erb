<form method="post" action="/pizzas/<%=@pizza.id%>">
  <label for="first-name">First Name:</label>
    <input id="first-name" type="text" name="first_name" value="<%= @pizza.first_name() %>" />
  

  <label for="last-name">Last Name:</label>
    <input id="last-name" type="text" name="last_name" value="<%= @pizza.last_name() %>" />
  

  <label for="pizza-select">Select a pizza:</label>
    <select id="pizza-select" name="topping"/>
      <option value="Margherita" <%= "selected" if @pizza.topping == "Margherita" %>>Margherita</option>
      <option value="Calzone"<%= "selected" if @pizza.topping == "Calzone" %>>Calzone</option>
    </select>
  

  <label for="quantity">Quantity:</label>
    <input id="quantity" type="number" name="quantity" value="<%= @pizza.quantity() %>"/>
  

  <input type='submit' value="Update Pizza"/>
</form>